<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.spring.web.dao.TMapMapper" >

    <!--新增图片-->
    <insert id="insertTMap" parameterType="com.spring.web.model.request.TMap" >
        insert into t_map values(#{userId},#{files});
    </insert>

    <!--查询图片-->
    <select id="selectByUserId" resultType="com.spring.web.model.request.TMap">
        select * from t_map where user_id= #{userId};
    </select>

    <!--删除图片-->
    <select id="dropByUserId" parameterType="Integer">
        delete from t_map where  user_id= #{userId};
    </select>

    <!--updateMap修改图片-->
    <update id="updateMap" parameterType="com.spring.web.model.request.TMap">
        update t_map set files=#{files} where user_id=-#{userId};
    </update>
</mapper>